---
import '@fontsource/poppins';
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.jsx';
import BreadCrumbs from '@/components/BreadCrumbs.astro';
import Tours from '@/components/Packages.astro';
import CTAWsp from '@/components/CTAWsp.astro';
import Wineries from '@/components/Wineries.astro';
---
<Layout
	title="Paquetes"
	canonical="https://viajoamendoza.com.ar/packages"
	metaTitle="Paquetes turísticos - Viajo a Mendoza"
	metaDescription="Los mejores recorridos que podrás disfrutar en tu visita a Mendoza, guía durante todo el recorrido, ofertas especiales para grupos familiares."
	metaImg="https://viajoamendoza.com.ar/images/lugares-turisticos/alta-mountain.webp"
>
    <Header
        client:load
        heroPage={false}
    />
    <BreadCrumbs
        page="Paquetes"
        title="Paquetes turísticos"
        description="Los mejores recorridos que podrás disfrutar en tu visita a Mendoza"
    />
    <Tours />
    <Wineries />
    <CTAWsp />
</Layout>