---
interface Props {
    src: string;
    text: string;
    noLink?: boolean;
}
const { src, text, noLink } = Astro.props;
const sizeLetterClass = (value) => {
    const length = value.length;
    if (length < 9) {
        return 'text-3xl'
    }else if(length < 12){
        return 'text-2xl'
    }else if(length < 18){
        return 'text-xl'
    }else if(length < 28){
        return 'text-lg'
    }else if(length >= 28){
        return 'text-base'
    }
};
---
<figure class="relative w-60 h-60 transition-all duration-300 hover:scale-105 cursor-pointer transform hover:-rotate-3">
    <a href={noLink ? '#' : '/packages'}>
        <img loading="lazy" class="rounded-md object-cover w-full h-full" src={src} alt={text}>
    </a>
    <div class="absolute bottom-0 bg-gradient-to-t w-full h-1/3 from-black to-transparent rounded-md"></div>
    <figcaption class={ sizeLetterClass(text) + " leading-tight absolute px-4 font-bold text-white bottom-2"}>
        <p>{text}</p>
    </figcaption>
</figure>