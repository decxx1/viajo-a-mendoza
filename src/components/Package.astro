---
interface Props {
    src: string;
    horario: string;
    title: string;
    text: string;
    salida: string;
    regreso: string;
}
const { src, text, horario, title, salida, regreso } = Astro.props;
---
<article>
    <header class="w-full">
        <img loading="lazy" class="object-cover w-full h-72 sm:h-64 rounded-md" src={src} alt={text} />
    </header>
    <section class="p-4 bg-white dark:bg-gray-800 border-t-8 mx-5 border-primary-700 relative -top-8">
        <header class="mb-1">
            <p class="font-bold text-primary-700">{horario}</p>
        </header>
        <h3 class="text-2xl font-medium mb-2 text-semiBlack dark:text-white">{title}</h3>
        <p class="text-semiBlack dark:text-white">{text}</p>
        <footer class="flex justify-between mt-6">
            <p class="text-sm text-gray-700 dark:text-gray-300">Salida: {salida}</p>
            <p class="text-sm text-gray-700 dark:text-gray-300">Regreso: {regreso}</p>
        </footer>
    </section>
</article>